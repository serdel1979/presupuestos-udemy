@model Categoria

@{
    ViewData["Title"] = "Crear Categoría";
}

<div class="card">
    <div class="card-header">
        Crear una categoría
    </div>


    <div class="card-body">
        
        <form asp-action="Crear">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Nombre" class="form-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="TipoOperacionId" class="form-label"></label>
                <select asp-for="TipoOperacionId"
                        asp-items="Html.GetEnumSelectList<TipoOperacion>()"
                        class="form-select"></select>
                <span asp-validation-for="TipoOperacionId" class="text-danger"></span>
            </div>

            <button class="btn btn-primary">Guardar</button>
            <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
        </form>


    </div>
</div>

 @section Scripts{
       <partial name-"_ValidationScriptPartial" />
 }